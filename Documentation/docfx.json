{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [ 
            "MonoGame.Framework/MonoGame.Framework.Windows.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ]
        }
      ],

      "dest": "_tmp/api/windx"
    },
    {
      "src": [
        {
          "src": "..",
          "files": [ 
            "MonoGame.Framework/MonoGame.Framework.WindowsGL.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ]
        }
      ],
      "dest": "_tmp/api/desktopgl"
    }
  ],
  "merge": {
    "content": [
       {
           "files": "*.yml",
           "src": "_tmp/api/windx"
       },
       {
           "files": "*.yml",
           "src": "_tmp/api/desktopgl"
       }
     ],
     "fileMetadata": {
         "platform": {
             "_tmp/api/windx/*.yml": [
                 "windx"
             ],
             "_tmp/api/desktopgl/*.yml": [
                 "desktopgl"
             ]
         }
     },
     "dest": "_api"
  },
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "manual/**.md",
          "manual/**/toc.yml",
          "tutorials/**.md",
          "tutorials/**/toc.yml",
          "toc.yml",
          "index.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**"
        ]
      },
      {
        "src": "..",
        "files": [
          "CHANGELOG.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**"
        ]
      }
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**"
        ]
      }
    ],
    "dest": "_site",
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "globalMetadata": {
      "_appTitle": "MonoGame Documentation",
      "_disableBreadcrumb": true,
      "_disableFooter": true,
      "_enableNewTab": false
    },
    "fileMetadataFiles": [
      "metadata.json"
    ],
    "template": [
      "default",
      "template-mg"
    ],
    "noLangKeyword": false
  },
  "pdf": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api-vb/**.yml"
        ],
        "exclude": [
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": [
          "manual/**.md",
          "manual/**/toc.yml",
          "tutorials/**.md",
          "tutorials/**/toc.yml",
          "toc.yml",
          "*.md",
          "pdf/*"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**",
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": "pdf/toc.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "dest": "_site_pdf"
  }
}
