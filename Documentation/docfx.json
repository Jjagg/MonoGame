{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [ 
            "MonoGame.Framework/MonoGame.Framework.Windows.csproj"
          ]
        }
      ],

      "dest": "obj/api/merged"
    },
    {
      "src": [
        {
          "src": "..",
          "files": [ 
            "MonoGame.Framework/MonoGame.Framework.WindowsGL.csproj"
          ]
        }
      ],
      "dest": "obj/api/desktopgl"
    }
  ],
  "merge": {
    "content": [
       {
           "files": "*.yml",
           "src": "obj/api/windx"
       },
       {
           "files": "*.yml",
           "src": "obj/api/desktopgl"
       }
     ],
     "fileMetadata": {
         "platform": {
             "obj/api/windx/*.yml": [
                 "windx"
             ],
             "obj/api/desktopgl/*.yml": [
                 "desktopgl"
             ]
         }
     },
     "dest": "obj/api/merged"
  },
  "build": {
    "content": [
      {
        "src": "obj/api/merged",
        "dest": "api/",
        "files": [
          "**.yml",
          "index.md"
        ]
      },
      {
        "files": [
          "manual/**.md",
          "manual/**/toc.yml",
          "tutorials/**.md",
          "tutorials/**/toc.yml",
          "toc.yml",
          "index.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**",
          "**~"
        ]
      },
      {
        "src": "..",
        "files": [
          "CHANGELOG.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**",
          "**~"
        ]
      }
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**",
          "**~"
        ]
      }
    ],
    "dest": "_site",
    "postProcessors": [
    ],
    "globalMetadata": {
      "_appTitle": "MonoGame Documentation",
      "_disableFooter": true,
      "_disablePrevnext": true,
      "_enableNewTab": false,
      "baseDir": "MonoGame-docfx"
    },
    "fileMetadataFiles": [
      "metadata.json"
    ],
    "template": [
      "template-fresh"
    ],
    "noLangKeyword": false
  },
  "pdf": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api-vb/**.yml"
        ],
        "exclude": [
          "**/toc.yml",
          "**/toc.md",
          "**~"
        ]
      },
      {
        "files": [
          "manual/**.md",
          "manual/**/toc.yml",
          "tutorials/**.md",
          "tutorials/**/toc.yml",
          "toc.yml",
          "*.md",
          "pdf/*"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**",
          "**/toc.yml",
          "**/toc.md",
          "**~"
        ]
      },
      {
        "files": "pdf/toc.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**",
          "_site_pdf/**",
          "**~"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**",
          "**~"
        ]
      }
    ],
    "dest": "_site_pdf"
  }
}
